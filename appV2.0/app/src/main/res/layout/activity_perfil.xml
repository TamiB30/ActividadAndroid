<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity"
    android:background="@color/app_bg">


    <View
        android:id="@+id/headerPerfil"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/bg_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTituloPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/saludo"
        android:textColor="@color/on_primary"
        android:textSize="34sp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/headerPerfil"
        app:layout_constraintVertical_bias="0.75"/>

    <!-- campos de perfil -->
    <LinearLayout
        android:id="@+id/CamposUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:elevation="6dp"
        android:translationY="-40dp"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_16"
        app:layout_constraintTop_toBottomOf="@id/headerPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="@dimen/max_card_width">

        <TextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Usuario: "
            android:textSize="@dimen/space_16"
            android:textStyle="bold"
            android:textColor="@color/text_dim"/>

        <EditText
            android:id="@+id/editNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCorreoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo: "
            android:textSize="@dimen/space_16"
            android:textStyle="bold"
            android:textColor="@color/text_dim"/>

        <EditText
            android:id="@+id/editCorreoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo..."/>

        <TextView
            android:id="@+id/tvContrasennaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a: "
            android:textSize="@dimen/space_16"
            android:textStyle="bold"
            android:textColor="@color/text_dim"/>

        <EditText
            android:id="@+id/editContrasennaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>

        <Button
            android:id="@+id/btnVolverHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="VOLVER"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>